%h1.maintitle Fung Institute Journal
= partial 'content/introduction'
%hr.mainpage
%h2 The Journal
- data.blog.articles[0...5].each_with_index do |article, i|
  .row
    .span8
      %article{:class => (i == 0) ? 'first' : ''}
        %h3
          %a{:href => article.url}= article.title
          %span= article.date.strftime('%b %e %Y')
        = article.summary
        .more
          %a{:href => article.url} read on &raquo;
